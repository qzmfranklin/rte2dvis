#  C++ sources
${BUILD}/%.o: ${DIR-mem-bw}/%.cpp
	@echo Compiling "${GREEN}$@${NONE}"...
	${${DIR-mem-bw}QUIET}${CXX} -o $@ -c $< ${${DIR-mem-bw}CXXFLAGS} ${${DIR-mem-bw}INCS}
${DEBUG}/%.s: ${DIR-mem-bw}/%.cpp
	@echo Generating "${CYAN}$@${NONE}"...
	${${DIR-mem-bw}QUIET}${CXX} -o $@ $< ${ASMFLAGS} ${${DIR-mem-bw}CXXFLAGS} ${${DIR-mem-bw}INCS} 
#  C sources
${BUILD}/%.o: ${DIR-mem-bw}/%.c
	@echo Compiling "${GREEN}$@${NONE}"...
	${${DIR-mem-bw}QUIET}${CC} -o $@ -c $< ${${DIR-mem-bw}CFLAGS} ${${DIR-mem-bw}INCS}
${DEBUG}/%.s: ${DIR-mem-bw}/%.c
	@echo Generating "${CYAN}$@${NONE}"...
	${${DIR-mem-bw}QUIET}${CC} -o $@ $< ${ASMFLAGS} ${${DIR-mem-bw}CFLAGS} ${${DIR-mem-bw}INCS} 
#DIR-mem-bwECTORY-SPECIFIC PHONY TARGETS
.PHONY: ${DIR-mem-bw}-all ${DIR-mem-bw}-test ${DIR-mem-bw}-asm ${DIR-mem-bw}-list
